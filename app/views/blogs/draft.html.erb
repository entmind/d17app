<h1>ブログ記事一覧(下書き)</h1>
<%= link_to 'ブログ記事一覧(公開)', blogs_path %>

<div class="blog-table">
  <table class="blog-table">
    <thead>
      <tr>
        <th>記事タイトル</th>
        <th>内容</th>
        <th>ステータス</th>
        <th>ユーザー名</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @blogs.each do |blog| %>
        <% if blog.status == 1 && blog.user.id == current_user.id %>
          <tr>
            <td><%= blog.title %></td>
            <td><%= blog.content %></td>
            <td><%= blog.status == 1? "１：下書き" : "２：公開" %></td>
            <td><%= blog.user.name %></td>
            <% if blog.user_id == current_user.id %>
              <td><%= link_to '詳細', blog_path(blog) %></td>
              <td><%= link_to '編集', edit_blog_path(blog) %></td>
              <td><%= link_to '削除', blog, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
              <!--<td><%#= link_to '削除', blog, data: { confirm: '本当に削除しますか？' } %></td>-->
            <% else %>
              <td colspan="3"><span>（非認証）</span></td>
            <% end %>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'ブログ記事一覧(公開)', blogs_path %>
